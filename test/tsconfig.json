{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": false, 
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ESNEXT",
    "types" : ["node"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "asset/",
    "node_modules*",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
